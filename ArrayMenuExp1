#include <stdio.h>

int main() {
    int arr[100], n = 0;
    int choice;

    while (1) {
        printf("\n----- ARRAY OPERATIONS MENU -----\n");
        printf("1. Create Array\n");
        printf("2. Display Array\n");
        printf("3. Addition of Elements (Sum)\n");
        printf("4. Count Even & Odd Numbers\n");
        printf("5. Reverse Array\n");
        printf("6. Find Maximum Element\n");
        printf("7. Find Minimum Element\n");
        printf("8. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            printf("Enter size of array: ");
            scanf("%d", &n);

            printf("Enter %d elements:\n", n);
            for (int i = 0; i < n; i++) {
                scanf("%d", &arr[i]);
            }
            printf("Array created successfully!\n");
        }

        else if (choice == 2) {
            if (n == 0) {
                printf("Array not created yet!\n");
            } else {
                printf("Array elements are:\n");
                for (int i = 0; i < n; i++) {
                    printf("%d ", arr[i]);
                }
                printf("\n");
            }
        }

        else if (choice == 3) {
            if (n == 0) {
                printf("Array not created yet!\n");
            } else {
                int sum = 0;
                for (int i = 0; i < n; i++) {
                    sum += arr[i];
                }
                printf("Sum of elements = %d\n", sum);
            }
        }

        else if (choice == 4) {
            if (n == 0) {
                printf("Array not created yet!\n");
            } else {
                int even = 0, odd = 0;
                for (int i = 0; i < n; i++) {
                    if (arr[i] % 2 == 0)
                        even++;
                    else
                        odd++;
                }
                printf("Even count = %d\n", even);
                printf("Odd count  = %d\n", odd);
            }
        }

        else if (choice == 5) {
            if (n == 0) {
                printf("Array not created yet!\n");
            } else {
                int start = 0, end = n - 1;
                while (start < end) {
                    int temp = arr[start];
                    arr[start] = arr[end];
                    arr[end] = temp;
                    start++;
                    end--;
                }
                printf("Array reversed successfully!\n");
            }
        }

        else if (choice == 6) {
            if (n == 0) {
                printf("Array not created yet!\n");
            } else {
                int max = arr[0];
                for (int i = 1; i < n; i++) {
                    if (arr[i] > max)
                        max = arr[i];
                }
                printf("Maximum element = %d\n", max);
            }
        }

        else if (choice == 7) {
            if (n == 0) {
                printf("Array not created yet!\n");
            } else {
                int min = arr[0];
                for (int i = 1; i < n; i++) {
                    if (arr[i] < min)
                        min = arr[i];
                }
                printf("Minimum element = %d\n", min);
            }
        }

        else if (choice == 8) {
            printf("Exiting program...\n");
            break;
        }

        else {
            printf("Invalid choice! Try again.\n");
        }
    }

    return 0;
}

